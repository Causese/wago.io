<% include static/header %>

<div class="row content" style="margin-top:5em">
    <div class="col-xs-12 col-sm-6 text-center">
        <div class="block">
            <p><span class="fa fa-sign-in"></span> Create WAGO account</p>

            <!-- show any messages that come back with authentication -->
            <% if (message.length > 0) { %>
                <div class="alert alert-danger"><%= message %></div>
            <% } %>

            <!-- LOGIN FORM -->
            <form action="/signup" method="post">
                <strong>User Name</strong>
                <input type="text" class="form-control" name="username" name="username"<br>

                <strong>Password</strong>
                <input type="password" class="form-control" name="password"><br>

                <strong>Password Confirm</strong>
                <input type="password" class="form-control" name="password2"><br>

                <button type="submit" class="btn btn-default btn-lg">Create Account</button>
            </form>
        </div>
    </div>
    <div class="col-xs-12 col-sm-6 text-center">
        <div class="block">
            <p>Already have an account? <a href="/login">Log in</a></p>

            <p>Or sign in through any of these social accounts.</p>

            <a href="/auth/bnet" class="btn bg-battlenet"><span class="waic waic-battlenet"></span> Battle.net</a>
            <a href="/auth/facebook" class="btn btn-primary"><span class="fa fa-facebook"></span> Facebook</a>
        	<a href="/auth/twitter" class="btn btn-info"><span class="fa fa-twitter"></span> Twitter</a>
        	<a href="/auth/google" class="btn btn-danger"><span class="fa fa-google-plus"></span> Google</a>
        </div>
    </div>
</div>

<% include static/footer %>    


