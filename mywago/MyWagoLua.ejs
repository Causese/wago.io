local LSM = LibStub("LibSharedMedia-3.0")
local koKR, ruRU, zhCN, zhTW, western = LSM.LOCALE_BIT_koKR, LSM.LOCALE_BIT_ruRU, LSM.LOCALE_BIT_zhCN, LSM.LOCALE_BIT_zhTW, LSM.LOCALE_BIT_western

local MediaType_BACKGROUND = LSM.MediaType.BACKGROUND
local MediaType_BORDER = LSM.MediaType.BORDER
local MediaType_FONT = LSM.MediaType.FONT
local MediaType_STATUSBAR = LSM.MediaType.STATUSBAR

-- -----
-- BACKGROUND
-- -----
<% if (media.backgrounds) {
    for (i=0;i<media.backgrounds.length;i++) { %>
LSM:Register(MediaType_BACKGROUND, "<%= media.backgrounds[i].title %>", [[Interface\Addons\MyWago\backgrounds\<%= media.backgrounds[i].zippedName %>]])
    <% }
} %>

-- -----
--  BORDER
-- ----
<% if (media.borders) {
    for (i=0;i<media.borders.length;i++) { %>
LSM:Register(MediaType_BORDER, "<%= media.borders[i].title %>", [[Interface\Addons\MyWago\borders\<%= media.borders[i].zippedName %>]])
    <% }
} %>

-- -----
--   STATUSBAR
-- -----
<% if (media.progressbars) {
    for (i=0;i<media.progressbars.length;i++) { %>
LSM:Register(MediaType_STATUSBAR, "<%= media.progressbars[i].title %>", [[Interface\Addons\MyWago\progressbars\<%= media.progressbars[i].zippedName %>]])
    <% }
} %>

-- -----
--   AURA TEXTURES
-- -----
<% if (media.auratextures) { %>
if (WeakAuras) then
    WeakAuras.texture_types.WAGO = {
      <% for (i=0;i<media.auratextures.length;i++) { -%>
        ["Interface\\Addons\\MyWago\\textures\\<%= media.auratextures[i].zippedName %>"] = "<%= media.auratextures[i].title %>",
      <% } %>
    }
end
<% } %>


-- -----
--   SPRITE SHEETS
-- -----
<% if (media.sprites) { %>
if (WeakAurasStopMotion) then
    WeakAurasStopMotion.texture_types.WAGO = {
      <% for (i=0;i<media.sprites.length;i++) { %>
        ["Interface\\Addons\\MyWago\\sprites\\<%= media.sprites[i].zippedName %>"] = "<%= media.sprites[i].title %>",
      <% } %>
    }

    <% for (i=0;i<media.sprites.length;i++) { %>
      WeakAurasStopMotion.texture_data["Interface\\Addons\\MyWago\\sprites\\<%= media.sprites[i].zippedName %>"] = {
       ["count"] = <%= media.sprites[i].spriteData.framecount %>,
       ["rows"] = <%= media.sprites[i].spriteData.rows %>,
       ["columns"] = <%= media.sprites[i].spriteData.columns %>
      }
    <% } %>
end
<% } %>

